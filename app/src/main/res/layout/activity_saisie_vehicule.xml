    <TableLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:columnCount="2"
        android:rowCount="8"
        tools:context=".GridXMLActivity">

<!--        Ligne 1-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Immatriculation"
                android:textSize="50sp"
                app:lineHeight="@dimen/material_emphasis_medium" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:hint="Saisissez la plaque d'immatriculation" />
        </TableRow>

<!--        Ligne 2-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Marque"
                android:textSize="75sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:hint="Saisissez la marque du véhicule" />
        </TableRow>

<!--        Ligne 3-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Modèle"
                android:textSize="75sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="1"
                android:hint="Saisissez le modèle du véhicule" />
        </TableRow>

<!--        Ligne 4-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Couleur"
                android:textSize="75sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="3"
                android:layout_column="1"
                android:hint="Saisissez la couleur du véhicule" />
        </TableRow>

<!--        Ligne 5-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Puissance"
            android:textSize="75sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="4"
            android:layout_column="1"
            android:hint="Saisissez le nombre de chevaux dynamiques" />

<!--        Ligne 6-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Catégorie"
            android:textSize="75sp" />

<!--        TODO : changer EditText en Spinner-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="5"
            android:layout_column="1"
            android:text="Compact, Citadine, Berline, S.U.V, ..." />

<!--        Ligne 7-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Boite de vitesse"
            android:textSize="75sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="6"
            android:layout_column="1"
            android:text="Boite manuelle ou automatique" />

<!--        Ligne 8-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="7"
            android:layout_column="0"
            android:text="Année"
            android:textSize="75sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="7"
            android:layout_column="1"
            android:text="Année de mise en circulation" />


    </TableLayout>


</LinearLayout>